{
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "strict": true,
        "noEmit": true,
        "skipLibCheck": true,
        "types": ["node"]
    },
    "include": ["./**/*.ts"]
}
